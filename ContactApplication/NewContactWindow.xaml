<Window x:Class="ContactApplication.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactApplication"
        mc:Ignorable="d"
        Title="NewContactWindow" Height="450" Width="800">
    <Grid>
        <!--Stackpanel gegevens contact-->
        <StackPanel Margin="10">
            <TextBox x:Name="txtName" Text="Add contact name." Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" Text="Add email." Margin="0,0,0,5"/>
            <TextBox x:Name="txtTelephone" Text="Add telephone number." Margin="0,0,0,5"/>
            <Button  x:Name="btnSave" Content="Save" Width="50" Margin="0,0,0,5" Click="btnSave_Click"/>
            <Button  x:Name="btnClose" Content="Close" Width="50" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
